{
  "name": "resilio-sync-watch-config",
  "version": "2.0.1",
  "description": "Small tool to create a resilio config and watch for changes to restart the sync daemon on changes",
  "main": "source/index.js",
  "bin": {
    "resilio-sync-watch-config": "dist/index.js"
  },
  "scripts": {
    "build": "del dist && tsc",
    "prepare": "npm run build",
    "start": "echo 'Do not start with NPM. NPM is fishy with signals.'",
    "test": "xo && nyc ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edjopato/resilio-sync-watch-config.git"
  },
  "author": "Edgar To",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "array-filter-unique": "^2.1.0",
    "cli": "^1.0.1",
    "debounce-promise": "^3.1.0",
    "source-map-support": "^0.5.12"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.4.0",
    "@types/cli": "^0.11.19",
    "@types/debounce-promise": "^3.1.1",
    "@types/node": "^12.6.8",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "ava": "^2.1.0",
    "del-cli": "^2.0.0",
    "eslint-config-xo-typescript": "^0.15.0",
    "nyc": "^14.1.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",
    "xo": "^0.24.0"
  },
  "files": [
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/edjopato/resilio-sync-watch-config/issues"
  },
  "homepage": "https://github.com/edjopato/resilio-sync-watch-config#readme",
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "source"
    ],
    "exclude": [
      "**/*.test.ts"
    ],
    "all": true,
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "extends": "xo-typescript",
    "extensions": [
      "ts"
    ],
    "rules": {
      "@typescript-eslint/indent": "off",
      "@typescript-eslint/semi": [
        "error",
        "never"
      ],
      "ava/no-ignored-test-files": "off"
    },
    "overrides": [
      {
        "files": [
          "*/config/*.*"
        ],
        "rules": {
          "@typescript-eslint/camelcase": "off",
          "camelcase": "off"
        }
      }
    ]
  }
}
