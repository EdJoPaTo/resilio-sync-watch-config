{
  "name": "resilio-sync-watch-config",
  "version": "2.2.1",
  "description": "Small tool to create a resilio config and watch for changes to restart the sync daemon on changes",
  "bin": {
    "resilio-sync-watch-config": "dist/source/index.js"
  },
  "scripts": {
    "build": "del-cli dist && tsc",
    "prepack": "npm run build",
    "start": "echo 'Do not start with NPM. NPM is fishy with signals.'",
    "test": "tsc --sourceMap && xo && nyc ava"
  },
  "main": "dist/source",
  "types": "dist/source",
  "files": [
    "dist/source",
    "!*.test.*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edjopato/resilio-sync-watch-config.git"
  },
  "author": {
    "name": "EdJoPaTo",
    "email": "resilio-sync-watch-config-npm-package@edjopato.de",
    "url": "https://EdJoPaTo.de"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10.17"
  },
  "dependencies": {
    "array-filter-unique": "^2.1.0",
    "cli": "^1.0.1",
    "debounce-promise": "^3.1.0",
    "resilio-sync": "^1.0.0",
    "source-map-support": "^0.5.12",
    "write-json-file": "^4.1.1"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.7.0",
    "@types/cli": "^0.11.19",
    "@types/debounce-promise": "^3.1.1",
    "@types/node": "^14.6.0",
    "ava": "^3.5.1",
    "del-cli": "^3.0.0",
    "nyc": "^15.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "xo": "^0.33.0"
  },
  "bugs": {
    "url": "https://github.com/edjopato/resilio-sync-watch-config/issues"
  },
  "homepage": "https://github.com/edjopato/resilio-sync-watch-config#readme",
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "dist",
      "source"
    ],
    "exclude": [
      "test/**",
      "**/*.d.ts",
      "**/*.test.ts"
    ],
    "all": true,
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "rules": {
      "node/no-unsupported-features/node-builtins": "warn",
      "@typescript-eslint/no-unsafe-member-access": "error",
      "@typescript-eslint/prefer-readonly-parameter-types": "error",
      "ava/no-ignored-test-files": "off"
    },
    "overrides": [
      {
        "files": [
          "*/config/*.*"
        ],
        "rules": {
          "@typescript-eslint/camelcase": "off",
          "camelcase": "off"
        }
      },
      {
        "files": [
          "**/*.test.*",
          "test/**/*.*"
        ],
        "rules": {
          "@typescript-eslint/prefer-readonly-parameter-types": "off"
        }
      }
    ]
  }
}
