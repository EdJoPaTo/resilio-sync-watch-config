{
  "name": "resilio-sync-watch-config",
  "version": "1.5.1",
  "description": "Small tool to create a resilio config and watch for changes to restart the sync daemon on changes",
  "main": "index.js",
  "bin": {
    "resilio-sync-watch-config": "index.js"
  },
  "scripts": {
    "start": "echo 'Do not start with NPM. Use ./index.js instead. NPM is fishy with signals.'",
    "test": "xo && nyc ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edjopato/resilio-sync-watch-config.git"
  },
  "author": "Edgar To",
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "cli": "^1.0.1",
    "debounce-promise": "^3.1.0"
  },
  "devDependencies": {
    "ava": "^2.1.0",
    "nyc": "^14.1.1",
    "xo": "^0.24.0"
  },
  "files": [
    "index.js",
    "src/*.js",
    "!*.test.js"
  ],
  "xo": {
    "space": true,
    "semicolon": false,
    "overrides": [
      {
        "files": [
          "src/parse-config*.js",
          "src/runmodes*.test.js"
        ],
        "rules": {
          "camelcase": [
            "warn",
            {
              "properties": "never"
            }
          ]
        }
      }
    ]
  },
  "bugs": {
    "url": "https://github.com/edjopato/resilio-sync-watch-config/issues"
  },
  "homepage": "https://github.com/edjopato/resilio-sync-watch-config#readme"
}
